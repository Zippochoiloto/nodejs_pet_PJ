extend ../layouts/common

block content

	<h1>Create User</h1>

	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/users/create", method="POST" enctype="multipart/form-data")
			.form-group
					label Name
					input#name.form-control(name ="name", type="text")

			.form-group
					label Phone
					input#phone.form-control(name ="phone", type="number")

			.form-group
					label Avatar
					input#avatar.form-control-file(name ="avatar", type="file")

			button Create

