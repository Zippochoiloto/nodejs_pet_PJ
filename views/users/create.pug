extend ../layouts/common

block content

	<h1>Create User</h1>

	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/users/create", method="POST")
			.form-group
					label Name
					input#name.form-control(name ="name", type="text", value=values.name ? values.name : '')

			.form-group
					label Phone
					input#phone.form-control(name ="phone", type="number", value=values.phone ? values.phone : '')

			button Create

