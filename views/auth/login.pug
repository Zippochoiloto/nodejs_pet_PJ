extend ../layouts/common

block content

	<h1>Login</h1>

	if errors
		each error in errors
			.alert.alert-danger= error
	form( method="POST")
			.form-group
					label Email
					input#email.form-control(name ="email", type="text")

			.form-group
					label password
					input#password.form-control(name ="password", type="password")

			button Login

